generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  analyst
  owner
  auditor
}

enum UserStatus {
  active
  suspended
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String
  name       String
  role       UserRole    @default(analyst)
  status     UserStatus  @default(active)
  language   String?     @default("pt-BR")
  title      String?
  lastLogin  DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  applications   Application[]
  auditLogs      AuditLog[]
  loginLogs      LoginLog[]
  resetTokens    PasswordResetToken[]
}

model Responsible {
  id        String   @id @default(uuid())
  name      String
  email     String
  title     String?
  department String?
  applications Application[]
  vulnerabilities Vulnerability[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id          String   @id @default(uuid())
  name        String
  description String?
  stack       String?
  repository  String?
  status      String   @default("active")
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])
  responsibleId String?
  responsible Responsible? @relation(fields: [responsibleId], references: [id])
  domains      Domain[]
  vulnerabilities Vulnerability[]
  dependencyFindings DependencyFinding[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Vulnerability {
  id            String   @id @default(uuid())
  title         String
  severity      String
  description   String?
  status        String   @default("open")
  detectedAt    DateTime @default(now())
  dueDate       DateTime
  tool          String?
  type          String?
  cwe           String?
  owasp         String?
  owaspApi      String?
  cvss          Float?
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  responsibleId String?
  responsible   Responsible? @relation(fields: [responsibleId], references: [id])
  findings      Finding[]
  reports       Report[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum FindingType {
  sast
  sca
  manual
}

model Finding {
  id              String       @id @default(uuid())
  source          String
  rawData         Json
  falsePositive   Boolean      @default(false)
  type            FindingType  @default(sast)
  filePath        String?
  lineNumber      Int?
  ruleId          String?
  message         String?
  context         String?
  vulnerabilityId String?
  vulnerability   Vulnerability? @relation(fields: [vulnerabilityId], references: [id])
  createdAt       DateTime     @default(now())
}

model DependencyFinding {
  id              String       @id @default(uuid())
  package         String
  version         String?
  ecosystem       String?
  severity        String?
  advisoryId      String?
  dependencyFile  String?
  tool            String?
  applicationId   String?
  application     Application? @relation(fields: [applicationId], references: [id])
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  rawData         Json?
}

model ReportTemplate {
  id        String   @id @default(uuid())
  name      String   @unique
  category  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reports   Report[]
}

model Report {
  id              String   @id @default(uuid())
  name            String
  format          String
  payload         Json
  vulnerabilityId String?
  vulnerability   Vulnerability? @relation(fields: [vulnerabilityId], references: [id])
  templateId      String?
  template        ReportTemplate? @relation(fields: [templateId], references: [id])
  createdAt       DateTime @default(now())
}

model KnowledgeDocument {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  category  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DomainType {
  domain
  subdomain
  ip
  api
}

enum DomainStatus {
  active
  monitoring
  deprecated
}

model Domain {
  id            String        @id @default(uuid())
  name          String
  type          DomainType    @default(domain)
  value         String
  status        DomainStatus  @default(active)
  environment   String?
  notes         String?
  applicationId String?
  application   Application?  @relation(fields: [applicationId], references: [id])
  responsibleId String?
  responsible   Responsible?  @relation(fields: [responsibleId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model LoginLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  email     String
  success   Boolean
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id         String   @id @default(uuid())
  tokenHash  String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())
}

model ImportLog {
  id         String   @id @default(uuid())
  tool       String
  filename   String?
  findings   Int
  actorId    String?
  actor      User?    @relation(fields: [actorId], references: [id])
  createdAt  DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String?
  actor     User?    @relation(fields: [actorId], references: [id])
  action    String
  entity    String
  meta      Json?
  createdAt DateTime @default(now())
}

model IntegrationConfig {
  id        String   @id @default(uuid())
  provider  String   @unique
  settings  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
